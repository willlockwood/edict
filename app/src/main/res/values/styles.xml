<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/onColorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/onColorSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/lightText</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#@color/colorPrimary</item>

        <item name="fontFamily">@string/fontFamily</item>

        <item name="buttonStyleSmall">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="radioButtonStyle">@style/Widget.MaterialComponents.CompoundButton.RadioButton.Dialog</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch.Large</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="android:windowBackground">@drawable/splash_launcher_screen</item>
    </style>

    <style name="errorText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/text_background_error</item>
        <item name="android:textColor">@color/darkText</item>
    </style>


    <style name="TextAppearance.CollapsedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.Switch.Large" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="RoutineText">
        <item name="android:textColor">@color/routineColor</item>
    </style>
    <style name="RestrictionText">
        <item name="android:textColor">@color/restrictionColor</item>
    </style>
    <style name="RestrictionIcon">
        <item name="android:tint">@color/restrictionColor</item>
    </style>

    <style name="BigEditText">
        <item name="android:textColor">@color/darkText</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TimePicker" parent="AppTheme">
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="TimePicker.Green">
        <item name="colorPrimary">@color/routineColor</item>
        <item name="colorAccent">@color/routineColor</item>
    </style>
    <style name="TimePicker.Red">
        <item name="colorPrimary">@color/restrictionColor</item>
        <item name="colorAccent">@color/restrictionColor</item>
    </style>

    <style name="Widget.MaterialComponents.CompoundButton.RadioButton.Dialog" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="buttonTint">@color/colorAccent</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Headline2" parent="AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/onColorSecondary</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>

    <style name="AppButton.Pressed" parent="AppButton">
        <item name="backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:tint">?attr/colorSecondary</item>
    </style>

    <style name="NewEdictTimeText">
        <item name="android:textSize">@dimen/new_edict_time_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bottom_line_white</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="CreateEdictLayout">
        <item name="android:layout_height">68dp</item>
    </style>

    <style name="CreateEdictLayout.Small" parent="CreateEdictLayout">
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="CreateEdictLayout.Small.NoIcon" parent="CreateEdictLayout.Small">
        <item name="paddingStart">64dp</item>
        <item name="android:paddingLeft">64dp</item>
    </style>

    <style name="CreateEdictLayout.Small.NoIcon.EndsWithTime" parent="CreateEdictLayout.Small.NoIcon">
        <item name="android:paddingRight">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="CreateEdictLayout.Small.EndsWithTime" parent="CreateEdictLayout.Small">
        <item name="android:paddingRight">12dp</item>
        <item name="paddingEnd">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="Preference.Text">
        <item name="android:minWidth">40dp</item>
    </style>

    <style name="Preference.Text.Title" parent="Preference.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkText</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="Preference.Text.Title.Example" parent="Preference.Text.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/darkTextDisabled</item>
    </style>

    <style name="Preference.Text.Title.Time" parent="Preference.Text.Title">
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="Preference.Text.Subtitle" parent="Preference.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/darkTextDisabled</item>
<!--        <item name="android:layout_marginLeft">24dp</item>-->
        <item name="android:layout_marginTop">4dp</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="Preference.Icon">
        <item name="tint">#99000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="Preference.Icon.Warning" parent="Preference.Icon">
        <item name="android:padding">3dp</item>
        <item name="srcCompat">@drawable/ic_exclamation_black_24dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:background">@drawable/text_background_error</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_bg</item>
    </style>

    <style name="RadioButtonDialogLayout">
        <item name="paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="toggleButton" parent="AppTheme">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textColor">@drawable/toggle_text_color</item>
    </style>

    <style name="toggleButton.Day" parent="toggleButton">
        <item name="android:layout_height">@dimen/day_picker_item_diameter</item>
        <item name="android:layout_width">@dimen/day_picker_item_diameter</item>
        <item name="android:layout_marginLeft">@dimen/day_picker_item_margin</item>
        <item name="android:layout_marginRight">@dimen/day_picker_item_margin</item>
    </style>

    <style name="MyActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:icon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="NewEdictBasicText">
        <item name="android:textSize">@dimen/new_edict_basic_text_size</item>
<!--        <item name="android:background">@color/colorPrimary</item>-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewEdictEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textSize">@dimen/new_edict_basic_text_size</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:background">@drawable/edit_text</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="NewEdictExampleText">
        <item name="android:textStyle">italic</item>
    </style>
    <style name="NewEdictEditText2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white_hint_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="NewEdictListItemText">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="NewEdictHeader2Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NewEdictRadioButton" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="buttonTint">@color/white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white_hint_text</item>
        <item name="backgroundTint">@color/white_hint_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="mySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:tint">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white_hint_text</item>
        <item name="backgroundTint">@color/white_hint_text</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="ReviewEdictLayout">
        <item name="android:background">@drawable/bottom_line_thin_gray</item>
    </style>
    <style name="ReviewEdictHeaderText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ReviewEdictValueText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NewEdictBigText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NewEdictHeaderText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="NewEdictButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
    </style>


    <style name="NumberPickerText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/offWhite</item>
        <item name="android:textColorHint">@color/offWhite</item>
    </style>

    <style name="CheckedChip">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/offWhite</item>
    </style>

    <style name="menu_labels_style">
        <item name="fontFamily">Open Sans</item>
        <item name="android:textColor">@color/onColorPrimary</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.MaterialComponents.Light" >
        <item name="android:textSize">@dimen/new_edict_basic_text_size</item>
    </style>

    <style name="DayChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="chipSpacingHorizontal">0dp</item>
    </style>
    <style name="DayChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/onColorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="chipStartPadding">11dp</item>
        <item name="chipEndPadding">0dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="closeIconStartPadding">0dp</item>
        <item name="closeIconEndPadding">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipIconVisible">false</item>
        <item name="closeIconVisible">false</item>
    </style>

    <style name="ExampleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">italic</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ExampleText.Subheader" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ExampleText.Highlighted" parent="ExampleText">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/onColorPrimary</item>
        <item name="android:tint">@color/onColorPrimary</item>
        <item name="drawableTint">@color/onColorPrimary</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="ExampleText.NotHighlighted" parent="ExampleText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="drawableTint">@color/colorPrimary</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="newEdictSelectedExampleIcon">
    </style>
    <style name="newEdictNotSelectedExampleIcon">
    </style>
    <style name="newEdictSelectedExampleText">
    </style>
    <style name="newEdictNotSelectedExampleText">
    </style>


</resources>
