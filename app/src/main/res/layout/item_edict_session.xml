<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="edictSession"
            type="com.willlockwood.edict.data.model.EdictSession"
            />
        <variable
            name="edict"
            type="com.willlockwood.edict.data.model.Edict"
            />
        <variable
            name="rightNow"
            type="Integer"
            />
        <variable
            name="timeMax"
            type="Integer"
            />
        <variable
            name="timeMin"
            type="Integer"
            />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/recyclerViewCard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusableInTouchMode="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="false"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            >

            <TextView
                android:id="@+id/edict_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{edict.toString()}"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <ProgressBar
                android:id="@+id/progress_day"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:max="@{edictSession.endMinutes}"
                android:min="@{edictSession.startMinutes}"
                android:progress="@{rightNow}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/edict_text"
                app:layout_constraintStart_toStartOf="@+id/edict_text"
                app:layout_constraintTop_toBottomOf="@+id/edict_text"
                app:progressTintDarkFromLevel="@{edict.level}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>