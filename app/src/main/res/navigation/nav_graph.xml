<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment"
    >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.willlockwood.edict.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/action_homeFragment_to_newEdictFragment"
            app:destination="@id/newEdictFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_reviewPagerFragment"
            app:destination="@id/reviewPagerFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_edictFragment"
            app:destination="@id/edictFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_checkInPagerFragment"
            app:destination="@id/checkInPagerFragment"
            />
        <action
            android:id="@+id/action_homeFragment_to_introFragment"
            app:destination="@id/newEdictIntro"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictFragment"
        android:name="com.willlockwood.edict.fragment.NewEdictFragment"
        android:label="fragment_new_edict"
        tools:layout="@layout/fragment_new_edict"
        >
        <action
            android:id="@+id/action_newEdictFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/reviewPagerFragment"
        android:name="com.willlockwood.edict.fragment.ReviewPagerFragment"
        android:label="fragment_review_edicts"
        tools:layout="@layout/fragment_review_edicts"
        >
        <action
            android:id="@+id/action_reviewEdicts_to_homeFragment"
            app:destination="@id/homeFragment"
            />

    </fragment>
    <fragment
        android:id="@+id/settings"
        android:name="com.willlockwood.edict.preferences.PreferencesFragment"
        android:label="fragment_settings"
        />
    <action
        android:id="@+id/open_settings_fragment"
        app:destination="@id/settings"
        />
    <fragment
        android:id="@+id/edictFragment"
        android:name="com.willlockwood.edict.fragment.EdictFragment"
        android:label="fragment_edict"
        tools:layout="@layout/fragment_edict"
        >
        <action
            android:id="@+id/action_edictFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/checkInPagerFragment"
        android:name="com.willlockwood.edict.fragment.CheckInPagerFragment"
        android:label="fragment_check_in_edicts"
        tools:layout="@layout/fragment_check_in_edicts"
        >
        <action
            android:id="@+id/action_checkInEdicts_to_homeFragment"
            app:destination="@id/homeFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictIntro"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictIntro"
        android:label="newEdictIntro"
        >
        <action
            android:id="@+id/action_newEdictIntro_to_newEdictScope"
            app:destination="@id/newEdictScope"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictType"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictType"
        android:label="NewEdictType"
        >
        <action
            android:id="@+id/action_newEdictType_to_newEdictScale"
            app:destination="@id/newEdictScale"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictScope"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictScope"
        android:label="NewEdictScope"
        >
        <action
            android:id="@+id/action_newEdictScope_to_newEdictDays"
            app:destination="@id/newEdictDays"
            />
        <action
            android:id="@+id/action_newEdictScope_to_newEdictType"
            app:destination="@id/newEdictType"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictScale"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictScale"
        android:label="fragment_new_edict_scale"
        >
        <action
            android:id="@+id/action_newEdictScale_to_newEdictText"
            app:destination="@id/newEdictText"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictText"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictText"
        android:label="fragment_new_edict_text"
        tools:layout="@layout/fragment_new_edict_text"
        >
        <action
            android:id="@+id/action_newEdictText_to_newEdictTime"
            app:destination="@id/newEdictTime"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictDays"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictDays"
        android:label="NewEdictDays"
        >
        <action
            android:id="@+id/action_newEdictDays_to_newEdictType"
            app:destination="@id/newEdictType"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictTime"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictTime"
        android:label="NewEdictTime"
        >
        <action
            android:id="@+id/action_newEdictTime_to_newEdictDeadline"
            app:destination="@id/newEdictDeadline"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictReview"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictReview"
        android:label="NewEdictReview"
        >
        <action
            android:id="@+id/action_newEdictReview_to_newEdictScope"
            app:destination="@id/newEdictScope"
            />
        <action
            android:id="@+id/action_newEdictReview_to_newEdictType"
            app:destination="@id/newEdictType"
            />
        <action
            android:id="@+id/action_newEdictReview_to_newEdictTime"
            app:destination="@id/newEdictTime"
            />
        <action
            android:id="@+id/action_newEdictReview_to_newEdictDeadline"
            app:destination="@id/newEdictDeadline"
            />
        <action
            android:id="@+id/action_newEdictReview_to_newEdictReminders"
            app:destination="@id/newEdictReminders"
            />
    </fragment>
    <fragment
        android:id="@+id/newEdictDeadline"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictDeadline"
        android:label="NewEdictDeadline"
        >
        <action
            android:id="@+id/action_newEdictDeadline_to_newEdictReminders"
            app:destination="@id/newEdictReminders"
            />
    </fragment>
    <action
        android:id="@+id/action_global_newEdictReview"
        app:destination="@id/newEdictReview"
        />
    <fragment
        android:id="@+id/newEdictReminders"
        android:name="com.willlockwood.edict.fragment.NewEdict.NewEdictReminders"
        android:label="NewEdictReminders"
        />
</navigation>