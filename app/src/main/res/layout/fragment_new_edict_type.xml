<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import
            type="com.willlockwood.edict.data.model.NewEdict.Type"
            />
        <variable
            name="vm"
            type="com.willlockwood.edict.viewmodel.binding.NewNewEdictVM"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.EdictFragment"
        >


        <Button
            android:id="@+id/restriction_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@{vm.type == Type.RESTRICTION ? @color/white : @color/colorPrimary }"
            android:onClick="@{() -> vm.setType(Type.RESTRICTION)}"
            android:text="restriction"
            android:textColor="@{vm.type != Type.RESTRICTION ? @color/white : @color/colorPrimary }"
            app:layout_constraintBottom_toTopOf="@+id/routine_btn"
            app:layout_constraintEnd_toStartOf="@+id/restriction_example_2_txt"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <TextView
            android:id="@+id/restriction_example_1_txt"
            style="@style/NewEdictExampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text='"No drinking", or'
            app:layout_constraintBottom_toTopOf="@+id/restriction_example_2_txt"
            app:layout_constraintStart_toEndOf="@+id/restriction_btn"
            app:layout_constraintTop_toTopOf="@+id/restriction_btn"
            />

        <TextView
            android:id="@+id/restriction_example_2_txt"
            style="@style/NewEdictExampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text='"Only drink on weekends"'
            app:layout_constraintBottom_toBottomOf="@+id/restriction_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/restriction_btn"
            app:layout_constraintTop_toBottomOf="@+id/restriction_example_1_txt"
            />

        <Button
            android:id="@+id/routine_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@{vm.type == Type.ROUTINE ? @color/white : @color/colorPrimary }"
            android:onClick="@{() -> vm.setType(Type.ROUTINE)}"
            android:text="routine"
            android:textColor="@{vm.type != Type.ROUTINE ? @color/white : @color/colorPrimary }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/restriction_btn"
            app:layout_constraintStart_toStartOf="@+id/restriction_btn"
            app:layout_constraintTop_toBottomOf="@+id/restriction_btn"
            app:layout_constraintVertical_chainStyle="packed"
            />

        <TextView
            android:id="@+id/routine_txt"
            style="@style/NewEdictExampleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:text='"Meditate every morning"'
            app:layout_constraintBottom_toBottomOf="@+id/routine_btn"
            app:layout_constraintStart_toEndOf="@+id/routine_btn"
            app:layout_constraintTop_toTopOf="@+id/routine_btn"
            />

        <TextView
            android:id="@+id/days_txt"
            style="@style/ExampleText.NotHighlighted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_day_black_24dp"
            android:text="@{vm.newEdict.daysString()}"
            app:layout_constraintBottom_toBottomOf="@+id/rule_txt"
            app:layout_constraintEnd_toStartOf="@+id/rule_txt"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rule_txt"
            />

        <TextView
            android:id="@+id/rule_txt"
            style="@style/ExampleText.Highlighted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:drawableBottom="@drawable/ic_launcher_foreground"
            android:text="@{vm.newEdict.ruleString()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/time_txt"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/days_txt"
            />

        <TextView
            android:id="@+id/time_txt"
            style="@style/ExampleText.NotHighlighted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/ic_time_black_24dp"
            android:text="@{vm.newEdict.timeString()}"
            app:layout_constraintBottom_toBottomOf="@+id/rule_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/rule_txt"
            app:layout_constraintTop_toTopOf="@+id/rule_txt"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>