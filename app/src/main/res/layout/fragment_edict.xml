            <!--</androidx.constraintlayout.widget.ConstraintLayout>-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/levels_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/this_level_card"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:contentPaddingLeft="0dp"
                app:cardBackgroundColorFromLevel="@{viewmodel.level}"
                >

                <ImageView
                    android:id="@+id/thisLevelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="4dp"
                    app:backgroundColorFromLevel="@{viewmodel.level}"
                    app:iconColorFromLevel="@{viewmodel.level}"
                    app:srcIconFromLevel="@{viewmodel.level}"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/level_streak_min_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="8dp"
                android:text="@{viewmodel.levelStreakMinString}"
                />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:max="@{viewmodel.levelStreakMax}"
                android:min="@{viewmodel.levelStreakMin}"
                android:progress="@{viewmodel.levelProgress}"
                app:progressTintDarkFromLevel="@{edict.level}"
                />

            <TextView
                android:id="@+id/level_streak_max_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="@{viewmodel.levelStreakMaxString}"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/next_level_card"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardBackgroundColorFromLevel="@{viewmodel.level + 1}"
                >

                <ImageView
                    android:id="@+id/nextLevelIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="4dp"
                    app:iconColorFromLevel="@{viewmodel.level + 1}"
                    app:srcIconFromLevel="@{viewmodel.level + 1}"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>