<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>

    <item android:bottom="0dp" android:left="-3dp" android:right="-3dp" android:top="-3dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1.5dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
</layer-list>

